{
	"name": "js-testing",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/javascript/testing/src",
	"projectType": "library",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/testing"
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/javascript/testing/jest.config.ts"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/javascript/testing/**/*.ts", "libs/javascript/testing/package.json"]
			}
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/javascript/testing/**/*.css"],
				"formatter": "json"
			}
		}
	}
}
